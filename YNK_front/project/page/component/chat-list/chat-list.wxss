/* page/component/chat-list/chat-list.wxss */

page{
    background-color: #f5f6f5;
}
.chat-item{
    border-bottom: 10rpx solid #f5f6f5;
    background-color: rgb(250,250,250);
    /* width: 100%; */
}
.to{
    height: 120rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15rpx;
}

.gphoto{
    display: flex;
    align-items: center;
    justify-content: center;
}
.gphoto-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.message{
    /* margin-left: 30rpx; */
    /* padding: 15rpx; */
    position: relative;
    /* left: -100rpx; */
    width: 60%;
}
.msg-user{
    display: flex;
}
.msg-user{
    font-size: 35rpx;
}
.msg-good{
    font-size: 25rpx;
    color: gray;
}
.time{
    font-size: 25rpx;
    color: gray;
    line-height: 100%;
}