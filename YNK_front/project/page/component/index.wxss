@import '../common/common.wxss';
@import "../common/iconfont.wxss";


swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
swiper{
    width: 90%;
    margin: 0 auto;
    overflow: hidden;
    border-radius: 10rpx;
}

.dec{
    position: absolute;
    width: 100%;
    height: 290rpx;
    /* border-radius: 0 0 20rpx 20rpx; */
    z-index: -1;
    background-color: #AB956D;
}
.swiper-box{
    /* background-color: #AB956D; */
    position: relative;
    background-position-y: -100rpx;
}
.select-title,.newgood-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}



.picker-view{
    
}











.newgood{
    padding: 0 10rpx;
    background-color: white;
}

.newgood-list {
    display: block;
    margin:0 0rpx 20rpx 0;
    border-radius: 4px;
    overflow: hidden;
    background: #f5f6f5;
}

.nav image{
    width:250rpx;
    height:250rpx;
}
.newgood-text{
    font-size: 32rpx;
    text-align: left;
}
.nav{
    overflow: hidden;

}
.nav>view{
    float: left;    
}
.nav-left{
    height: 250rpx;
}

.nav-right{
    position: relative;
    height:220rpx;
    width: 60%;
    padding: 15rpx;
}
.good-name{      /*只显示两行+超出部分省略号*/
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow:hidden;
    text-overflow:ellipsis;
    -webkit-line-clamp: 2;    /* white-space:nowrap;   */
}
.good-peice{
    color:rosybrown;
    /* margin-top: 20rpx; */
}
.good-hot{
    position: absolute;
    bottom: 40rpx;
    font-size: 20rpx;
    color: rosybrown;
    display: flex;
}
.newgood-text-user{
    width: 100%;
    position: absolute;
    bottom: 0rpx;
    display: flex;
    overflow: hidden;
    align-items: center;
    font-size: 24rpx;
    color: gray
}
.newgood-text-user icon{
    /* font-size: 16px; */
    position: relative;
    top:-10rpx;
}
.newgood-text-user view{
    margin-right: 20rpx;
}
.newgood-text-school{
    color: rosybrown;
}
.botton{
    height: 60rpx;
    background-color: #f5f5f5;
    color:gray;
    text-align: center;
}
