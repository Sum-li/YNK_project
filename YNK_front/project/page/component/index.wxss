@import '../common/common.wxss';
@import "../common/iconfont.wxss";


swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
swiper{
    /* width: 90%; */
    margin: 0 auto;
    overflow: hidden;
    border-radius: 10rpx;
}

.dec{
    position: absolute;
    width: 100%;
    height: 170rpx;
    /* border-radius: 0 0 20rpx 20rpx; */
    z-index: -1;
    background-color: #AB956D;
}
.swiper-box{
    /* background-color: #AB956D; */
    position: relative;
    background-position-y: -100rpx;
}
.select-title,.newgood-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}



  /* 下拉菜单 */
  /* 下拉菜单导航 */
  .menu-po {
    position: relative;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}
.icon-right{
    transition: all 0.3s;
    margin-left: 5rpx;
    color:#696969;
    transform: translateY(-5rpx)
}
.icon-down{
    transform: rotate(90deg);
    /* transform:translateX(5rpx) */
}
.menu {
    background-color: #fff;
    margin-top: 30rpx;
    /* border-top: 1rpx solid #e9e9e9; */
}

.menu-list {
    display: flex;
    justify-content: space-between;
    height: 90rpx;
}

.menu-nav {
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.menu-nav image {
    width: 32rpx;
    height: 32rpx;
}

.menu-nav text {
    color: #696969;
    font-size: 14px;
}



.menu-if {
    background-color: #ffffff;
    box-sizing: border-box;
    position: absolute;
    top: 92rpx;
    left: 0;
    z-index: 9;
    width: 100%;
}

.meun-txt {
    height: auto;
    color: #696969;
}

.menu-text-list {
    position: relative;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
}

.menu-text-list-left {
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    padding-left: 35rpx;
}

/* text样式 */
.meun-city-txt {
    display: block;
    border-bottom: 1rpx solid #e9e9e9;
    width: 100%;
    padding: 25rpx 0;
    font-size: 14px;
}

.meun-city-txt-price {
    display: flex;
    justify-content: center;
}

.menu-text-list-rig {
    width: 50%;
    position: absolute;
    top: 0;
    right: 0;
    background-color: #f9f9f9;
    z-index: 10;
    box-sizing: border-box;
    padding-left: 35rpx;
}


/* over/auto */
.over-auto {
    height: 550rpx;
    overflow: auto;
}













.newgood{
    padding: 0 10rpx;
    background-color: white;
}

.newgood-list {
    display: block;
    margin:0 0rpx 20rpx 0;
    border-radius: 4px;
    overflow: hidden;
    background: #f5f6f5;
}

.nav image{
    width:250rpx;
    height:250rpx;
}
.newgood-text{
    font-size: 32rpx;
