/* page/component/publish/publish.wxss */
@import "../../common/iconfont.wxss";



.category-btn{
  text-align: left;
  overflow: hidden;
  background-color: transparent;
  border: 0px solid snow;
}
textarea{
  width: 100%;
  font-size: 30rpx;
  min-height: 300rpx;
  /* text-indent:12rpx */
}
button::after {
  border: none;
}



.panel{
  background-color: #f5f6f5;
  border-radius: 2px;
  margin: 30rpx 5rpx;
  padding: 20rpx 5px;
  box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.20);

}
.div-line{
  background: #E0E3DA;
  width: 100%;
  height: 3rpx;
}



/* 文字描述部分 */
.message{
  position: relative;
}
.title{
  height: 70rpx;
}
.detail{
  height: 300rpx;
}
.quickinput{
  width: 95%;
  position: absolute;
  bottom: 10rpx;
  margin: 0 auto;
  z-index: 100;
  /* overflow-x: scroll; */
}

/* 图片预览部分 */
.question-hint{
  text-align: center;
}
.add-img{
  background-color: #AB956D !important;
  color: #eeeeee !important;
  display:block;
  margin:0 auto
}
.q-image{
  width: 200rpx;
  height:200rpx;
}
.q-image-wrap{
  position: relative;
  display: inline-block;
  margin: 20rpx 21rpx;

}
.q-image-remover{
  position: absolute;
  right: 15rpx;
  top: -5rpx;
  /* width: 20rpx; */
  /* height: 20rpx; */
  transform: scale(1.8)
}
.question-opera{
  text-align: center;
}





/* 选择分类部分 */

.text-placeholder{
  color: rgb(143, 143, 143);
  font-size: 0.8rem;
  /* position: absolute; */
  /* right: 0rpx; */
}
.category-btn>view{
  display: inline-block;
}
.category-btn-right{
  float: right
}
